{
  "name": "collaborative-canvas",
  "version": "1.0.0",
  "description": "Real-Time Collaborative Drawing Canvas with Global Undo/Redo",
  "main": "server/server.ts",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "ts-node server/server.ts",
    "client:dev": "vite",
    "build": "tsc && vite build",
    "serve": "node dist/server/server.js"
  },
  "keywords": [
    "canvas",
    "websocket",
    "real-time",
    "collaboration"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/uuid": "^9.0.7",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "concurrently": "^8.2.2"
  }
}