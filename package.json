{
  "name": "collaborative-canvas",
  "version": "1.0.0",
  "description": "Real-Time Collaborative Drawing Canvas with Global Undo/Redo",
  "main": "server/server.ts",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "start": "node dist/server/server.js",
    "build": "tsc && node node_modules/vite/bin/vite.js build && npm run copy-client",
    "copy-client": "node -e \"require('fs').cpSync('dist/client', 'dist/server/public', {recursive: true})\"",
    "server:dev": "ts-node server/server.ts",
    "client:dev": "vite"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "canvas",
    "websocket",
    "real-time",
    "collaboration"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.3",
    "uuid": "^9.0.1",
    "typescript": "^5.3.3",
    "vite": "^7.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2"
  }
}